<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
      integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/categoryTemp.css" />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
    <title>Index</title>
    <%- include('./views/partials/head.ejs') %>
  </head>
  <body>
    <%- include('./views/partials/navbar.ejs') %>
    <div class="mainContent">
      <div class="swiper">
        <a href="" id="viewAll">view all</a>
        <div class="swiper-wrapper">
          <%for (const cuisine in cuisineList){ %>
          <div class="swiper-slide">
            <div class="textCaption">
              <a href="/cuisine/<%=cuisineList[cuisine].Cuisine%>">
                <img src="<%=cuisineList[cuisine].photo %> " alt="image" />
              </a>
              <div class="bottom-left"><%=cuisineList[cuisine].Cuisine%></div>
            </div>
          </div>
          <% } %>
        </div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>
      <div class="rowHeader">
        <h3><%=pickedCuisine%> Restaurants Near You</h3>
      </div>
      <%for (const food in findRest){ %>
      <a class="click-Card" href="/restaurants/<%=findRest[food]._id%>">
        <div class="card mb-0">
          <img
            src="<%=findRest[food].photo%> "
            class="card-img-top"
            alt="..."
          />
          <div class="card-body">
            <h5 class="card-title"><%=findRest[food].name%></h5>
            <p class="card-text">
              Location: <%=findRest[food].location%> Speciality:
              <%=findRest[food].speciality%>
            </p>
            <p class="card-text">
              <small class="text-muted"
                >Rating: <%=findRest[food].rating%></small
              >
            </p>
          </div>
        </div>
      </a>
      <% } %>
    </div>
  </body>
  <script>
    const swiper = new Swiper(".swiper", {
      slidesPerView: 4,
      spaceBetween: 8,
      loop: true,

      // If we need pagination
      pagination: {
        el: ".swiper-pagination",
      },

      // Navigation arrows
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },

      // And if we need scrollbar
      scrollbar: {
        el: ".swiper-scrollbar",
      },
    });
  </script>
</html>
